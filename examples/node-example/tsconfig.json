{
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["./index.ts", "src/**/*"],
  "exclude": ["src/**/__tests__/*"]
}
